[user]
	name = {{ .name | quote }}
	email = {{ .email | quote }}
[core]
	autocrlf = input
	editor = vim
[push]
	default = current
[pull]
	rebase = true
[rebase]
	autoStash = true
[alias]
	nah = "!git reset --hard && git clean -df"
	undo = "reset --soft HEAD~1"
	amend = "commit --amend --no-edit"
	unstash = "stash pop"
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[init]
	defaultBranch = main
[advice]
	skippedCherryPicks = false
